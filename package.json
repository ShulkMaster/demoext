{
  "name": "demoext",
  "displayName": "demoext",
  "description": "Demo extension for vs code no particular purpose",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:file"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "demoext.toUpper",
        "enablement": "true",
        "title": "Uppercase selection",
        "icon": "$(arrow-up)",
        "category": "demoext",
        "shortTitle": "Uppercase selection"
      },
      {
        "command": "demoext.toLower",
        "enablement": "true",
        "title": "Lowercase selection",
        "category": "demoext",
        "icon": "$(arrow-down)",
        "shortTitle": "Lowercase selection"
      },
      {
        "command": "demoext.toCapital",
        "enablement": "true",
        "title": "Capitalize selection",
        "icon": "$(pinned)",
        "category": "demoext"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "demoext.toUpper",
          "when": "editorHasSelection",
          "group": "edit"
        },
        {
          "command": "demoext.toLower",
          "when": "editorHasSelection",
          "group": "edit"
        },
        {
          "command": "demoext.toCapital",
          "when": "editorHasSelection",
          "group": "edit"
        }
      ],
      "editor/context": [
        {
          "command": "demoext.toUpper",
          "group": "1_modification",
          "when": "editorHasSelection"
        },
        {
          "command": "demoext.toLower",
          "group": "1_modification",
          "when": "editorHasSelection"
        },
        {
          "command": "demoext.toCapital",
          "group": "1_modification",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.16.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.2"
  }
}
